<!DOCTYPE html>

<body>

  <div class="row">
    <div class="">
      <h3 class="center">Waiter App</h3>
    </div>
  </div>

  <form class="" action="/waiters" method="post">
    <div class="input-field col s6">

    </div>

    <div class=" row">
      <label for="first_name">First Name</label>
      <input id="last_name" type="text" name="text" class="validate col 8" pattern="[A-Za-z]{1,40}" title="Example: Mzwa">
    </div>
    <br>

    <br>
    <div class="row">

      {{#each day_name}}
        <p class="col 2">
          <label>
            <input type="checkbox" name="checkbox"{{checked}} value="{{days}}"/>
            <span>{{days}}</span>
        </label>
        </p>
      {{/each}}

    </div>

      <div class="row">
        <button class="btn waves-effect green accent-4 col 6" type="submit" name="enter" value="">Submit</button>
        <a href="/days" class="col 6"><i class="fas fa-users small "></i></a>
      </div>

  </form>

  {{#if messages.info}}
    <div class="col 12">
      <h5 href="/flash" name="flash" class="error">{{messages.info}}</h5>
    </div>
  {{/if}}


  </div>

</body>
