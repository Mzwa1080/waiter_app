<!DOCTYPE html>

<body class="deep-orange accent-2">

  <div class="row">
    <div class="">
      <h3 class="center">Waiter App</h3>
    </div>
  </div>

  <form class="" action="/waiters" method="post">
    <div class="input-field col s6">

    </div>

    <div class=" row">
      <label for="first_name">First Name</label>
      <input id="last_name" type="text" name="text" class="validate col 6" pattern="[A-Za-z]{1,40}" title="Example: Mzwa">
    </div>
    <br>

    <br>
    <div class="row">

      {{#each day_name}}
      <p class="col 2">
        <label>
          <input type="checkbox" name="checkbox" {{checked}} value="{{days}}" />
          <span>{{days}}</span>
        </label>
      </p>
      {{/each}}

    </div>

      {{#if messages.info}}
        <div class="col 12">
          <h5 href="/flash" name="flash" class="error center" style="color:red; font-size:25px; font-weight:bolder;">{{messages.info}}</h5>
        </div>
      {{/if}}

    <div class="col 8 center">
  
        <button class="btn waves-effect green accent-4 col 6" type="submit" name="enter" value="">Submit</button>

        <a href="/days" class="col 3" style="padding:10%;"><i class="fas fa-users small "></i></a>


        <a class='dropdown-trigger btn waves-effect green accent-4 col 6' href='#' data-target='dropdown1'>Change Shifts</a>
        <ul id='dropdown1' class='dropdown-content'>
          {{#each users}}
          <li><a href="/waiters/{{name}}">{{name}}</a></li>
          {{/each}}
        </ul>

    </div>

  </form>



